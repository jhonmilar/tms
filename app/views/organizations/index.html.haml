%table.table
  %thead
    %tr
      %th Name
      %th URL
      %th Action
  %tbody
    - @organizations.each do |org|
      %tr
        %td
          = org.name
        %td
          = org.url
        %td
          = link_to "Edit", edit_organization_path(org.id)
          = link_to "Delete", organization_path(org.id), :method => :delete
          = link_to "Show Sub Organizations", organization_sub_organizations_path(org)

= link_to "Create new Organization", new_organization_path